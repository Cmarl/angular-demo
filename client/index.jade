doctype html
html(lang='en' ng-app='alpha')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Angular Demo
    link(rel='stylesheet', href='/vendor/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/vendor/font-awesome/css/font-awesome.min.css')
    link(rel='stylesheet', href=isProd ? '/index.min.css' : '/index.css')
    link(rel='shortcut icon', href='/favicon.ico')

    //if lt IE 9
      script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
      script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')

  body
    h1#title Angular Demo

    .container-fluid
      .row(ng-controller='listfun')
        .col-xs-12
          h1 List Fun
          input(type='text', ng-model='numbers')
          button.btn.btn-success(ng-click='computeNumbers()') Compute
          input(type='number' ng-model='newNumber')
          button.btn.btn-danger(ng-click='addNumber()') Add Num
          #numbers
            .row
              .col-xs-6
                .numbers(ng-repeat='number in numbers track by $index' style='background-color: {{setColor(number)}}; margin: 5px;', ng-click='removeNumber($index)') {{number}}
              .col-xs-6
                h2 Product
                h3 {{product}}
                h2 Sum
                h3 {{sum}}
      .row(ng-controller='rainbow')
        .col-xs-12
          h1 Rainbow
          input(type='color', ng-model='newcolor')
          button.btn.btn-primary(ng-click='addColor()') Add Color
          #colors
            .color(ng-repeat='color in colors track by $index', style='background-color:{{color}};', ng-click='removeColor($index)') {{color}} {{z}}
      .row(ng-controller='calculator')
        .col-xs-12
          h1 Calculator
          input(type='number', ng-model='x')
          input(type='text', ng-model='op')
          input(type='number', ng-model='y')
          button.btn.btn-success.btn-sm(ng-click='compute()') =
          span {{result}}
      .row(ng-controller='beta')
        .col-xs-12
          p the value of x is {{x}}
          p the value of y is {{y}}
          p the sum of x and y is {{x + y}}
      .row(ng-controller='gamma')
        .col-xs-6
          h1 GAMMA I
          p the value of x is {{x}}
        .col-xs-6
          h1 GAMMA II
          p the value of y is {{y}}
          p the product of x, y and z is {{x*y*z}}

    script(src='/vendor/jquery/dist/jquery.min.js')
    script(src='/vendor/lodash/lodash.min.js')
    script(src='/vendor/angular/angular.min.js')
    script(src='/vendor/bootstrap/dist/js/bootstrap.min.js')
    script(src=isProd ? '/index.min.js' : '/index.js')
